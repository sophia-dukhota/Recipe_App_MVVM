<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_6002CEM_SophiaDukhota.Views.MainAppPage"
             xmlns:local="clr-namespace:_6002CEM_SophiaDukhota.ViewModels"
             Title="MainAppPage">

    <ContentPage.BindingContext>
        <local:MainAppPageViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="getData"
                Text="GetData"
                Command="{Binding GetRecipesCommand}"/>
     
        <ListView x:Name="recipeSearchView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding recipe.uri}"
                              Detail="{Binding recipe.label}"/>
                   <!-- <TextCell Text="{Binding hits[0].recipe.label}"
                              Detail="{Binding hits[0].recipe.label}"/> -->
                    
                   <!-- <Label Text="{Binding q}"/> -->

                </DataTemplate>

            </ListView.ItemTemplate>


        </ListView> 

        <!--
        <Label Text="{Binding RecipesSearchModel, Mode=TwoWay}"/>
        <Label Text="{Binding RecipesSearchModel.hits[0].recipe.label}"/>
        <Label Text="{Binding Label}"/> -->
    </VerticalStackLayout>
</ContentPage>